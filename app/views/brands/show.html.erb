<div class="p-4 p-md-5 mb-4 text-white bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 fst-italic"><%= @brand.title %></h1>
    <p class="lead my-3"><%= @brand.description %></p>
    <a class="btn btn-primary btn-lg" href="
      <%= root_path %>" role="button">Change shop</a>
  </div>
</div>

<h1 class="text-center">Ours products</h1>
<div class="container mt-3">
  <% @product_brand_id.each do |item| %>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= item.image_url %>" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.price %>â‚¬</p>
            <% if item.quantity == 0 %>
              <p class="card-text"><strong style="color: red">No stock available :(</strong></p>
            <% else %>
              <p class="card-text"><small>There are more than: <%= item.quantity %></small></p>
            <% end %>
            <%= link_to "Add to cart", cart_products_path(id_product: item.id), method: "create", class: "btn btn-outline-primary" %>
            <%= link_to "Edit the product", edit_product_path(id: item.id), class: "btn btn-outline-warning" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
